{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "css_hud",
    "version": "0.1.0"
  },
  "tauri": {
    
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    
    "windows": [
      {
        "width": 1920,
        "height": 1080,
        "fullscreen": false,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "center": true,
        "title": "Spk's Hud"
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ZxYdzero",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
